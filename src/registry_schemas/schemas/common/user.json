{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/common/user",
    "type": "object",
    "title": "The Common User Schema",
    "properties": {
        "creationDate": {
            "type": "string",
            "format": "date-time",
            "description": "Generated by the BC Registries application, the date and time a record is created in the system in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "username": {
            "type": "string",
            "maxLength": 1000
        },
        "sub": {
            "type": "string",
            "maxLength": 36,
            "description": "Subject or principal."
        },
        "iss": {
            "type": "string",
            "maxLength": 1024,
            "description": "Issuer."
        },
        "firstname": {
            "type": "string",
            "maxLength": 1000
        },
        "lastname": {
            "type": "string",
            "maxLength": 1000
        },
        "email": {
            "type": "string",
            "format": "email",
            "maxLength": 1024
        },
        "accountId": {
            "type": "string",
            "maxLength": 20
        }
    },
    "required": [
        "username",
        "sub"
    ]
}
