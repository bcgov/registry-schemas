{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/mhr/note",
    "type": "object",
    "title": "The MHR Registration Note Schema",
    "properties": {
        "documentType": {
            "type": "string",
            "minLength": 1,
            "maxLength": 4,
            "description": "The note document type code."
        },
       "documentId": {
            "type": "string",
            "maxLength": 8,
            "description": "The unique document ID."
        },
        "createDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Generated by the MHR system and included in a response, the date and time a record is created in the system in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "expiryDate": {
            "type": [ "string", "null" ],
            "format": "date-time",
            "description": "The date of the registration expiry. The date and time in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "remarks": {
            "type": [ "string", "null" ],
            "maxLength": 420,
            "description": "Additional information about the registration."
        },
        "contactName": {
            "type": [ "string", "null" ],
            "maxLength": 40,
            "description": "The name of the contact."
        },
        "contactAddress": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/address"
        }
    },
    "required": [
        "documentType",
        "remarks"
    ]
}
