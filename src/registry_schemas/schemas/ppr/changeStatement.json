{
    "definitions": {},
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/changeStatement",
    "type": "object",
    "title": "The PPR Change Statement Schema",
    "properties": {
        "statementType": {
            "type": "string",
            "maxLength": 20,
            "enum": ["CHANGE_STATEMENT"]
        },
        "baseRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10,
            "description": "The Base Registration Number uniquely identifies a Financing Statement."
        },
        "changeType": {
            "type": "string",
            "maxLength": 2,
            "enum": ["AC", "DR", "DT", "PD", "ST", "SU"],
            "description": "Type of change."
        },
        "clientReferenceId": {
            "type": [ "string", "null" ],
            "maxLength": 50,
            "description": "An optional client reference identifier associated with a change. Provided to facilitate client tracking of PPR activity."
        },
        "documentId": {
            "type": [ "string", "null" ],
            "maxLength": 10,
            "description": "Optional draft document identifier if the Amendment is in a draft state and has not yet been registered. If included when creating the statement the draft will be deleted."
        },
        "authorizationReceived": {
            "type": "boolean",
            "description": "Required when submitting a request. Must be true to indicate client authorization of the registration."
        },
        "debtorName": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/debtorName"
        },
        "registeringParty": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
        },
        "deleteSecuredParties": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
            }
        },
        "addSecuredParties": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
            }
        },
        "deleteDebtors": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
            }
        },
        "addDebtors": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/party"
            }
        },
        "deleteVehicleCollateral": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/vehicleCollateral"
            }
        },
        "addVehicleCollateral": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/vehicleCollateral"
            }
        },
        "deleteGeneralCollateral": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/generalCollateral"
            }
        },
        "addGeneralCollateral": {
            "type": [ "array", "null" ],
             "items": {
                "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/ppr/generalCollateral"
            }
        },
        "createDateTime": {
            "type": "string",
            "format": "date-time",
            "description": "Generated by the PPR system and included in a response, the date and time a record is created in the system in the ISO 8601 format YYYY-MM-DDThh:mm:ssTZD."
        },
        "changeRegistrationNumber": {
            "type": "string",
            "minLength": 1,
            "maxLength": 10,
            "description": "Generated by the PPR system and included in a success response, the PPR system amendment record identifer."
        },
        "payment": {
            "$ref": "https://bcrs.gov.bc.ca/.well_known/schemas/common/paymentReference"
        }
    },
    "oneOf":[
        {
            "properties": {
                "changeType": { "const": "AC" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addVehicleCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addGeneralCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        },
        {
            "properties": {
                "changeType": { "const": "PD" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteVehicleCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteGeneralCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteVehicleCollateral",
                        "deleteGeneralCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        },
        {
            "properties": {
                "changeType": { "const": "DR" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteDebtors"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "deleteDebtors",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        },
        {
            "properties": {
                "changeType": { "const": "DT" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteDebtors",
                        "addDebtors"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "deleteDebtors",
                        "addDebtors",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        },
        {
            "properties": {
                "changeType": { "const": "ST" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "deleteSecuredParties",
                        "addSecuredParties"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "deleteSecuredParties",
                        "addSecuredParties",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        },
        {
            "properties": {
                "changeType": { "const": "SU" }
            },
            "anyOf":[
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addVehicleCollateral",
                        "deleteVehicleCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addGeneralCollateral",
                        "deleteGeneralCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addVehicleCollateral",
                        "deleteGeneralCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "debtorName",
                        "addGeneralCollateral",
                        "deleteVehicleCollateral"
                    ]
                },
                {
                    "required": [
                        "changeType",
                        "baseRegistrationNumber",
                        "registeringParty",
                        "createDateTime",
                        "changeRegistrationNumber",
                        "payment"
                    ]
                }
            ]
        }
    ]
}